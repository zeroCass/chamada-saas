{% extends './base.jinja2' %}


{% block header %}
<h1>{% block title %}Register{% endblock %}</h1>
{% endblock %}

{% block content %}
<div class="container">
    <h1>Register</h1>
    <form method="POST">
        <div>
            <label for="nome"></label>
            <input
                type="text"
                id="nome"
                name="nome"
                placeholder="Digite seu nome"
                required="true"
            />
        </div>
    </form>
    <br>
    <p>Already have an account? <a href="{{ url_for('auth.login') }}">Login</a></p>
</div>

{% endblock %}