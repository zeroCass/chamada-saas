{% extends './base.jinja2' %}


{% block header %}
<h1>{% block title %}Register{% endblock %}</h1>
{% endblock %}

{% block content %}
<div class="container">
    <h1>Register</h1>
    <form method="POST">
    
        <div>
            <label for="nome">Nome:</label>
            <input
                type="text"
                id="nome"
                name="nome"
                placeholder="Digite seu nome"
                required="true"
            />
        </div>
        <div>
            <label for="matricula">Matrícula:</label>
            <input 
                type="text"
                id="matricula"
                name="matricula"
                placeholder="Digite sua matrícula"
                required="true"
            />
        </div>
        <div>
            <label for="email">Email:</label>
            <input
                type="email"
                id="email"
                name="email"
                placeholder="Digite seu email"
                required="true"
            />
        </div>
        <div>
            <label for="senha">Senha:</label>
                <input type="password"
                id="senha"
                name="senha"
                placeholder="Digite sua senha"
                required="true"
            />
        </div>
        <div>
            <label for="tipo_usuario">Tipo de Usuário:</label>
            <input type="radio" id="aluno" name="tipo_usuario" value="Aluno" required="true" />
            <label for="aluno">Aluno</label>
            <input type="radio" id="professor" name="tipo_usuario" value="Professor" required="true" />
            <label for="professor">Professor</label>
        </div>
        <br>
        <button type="submit">Registrar</button>
    </form>
    <br>
    <p>Already have an account? <a href="{{ url_for('auth.login') }}">Login</a></p>
</div>

{% endblock %}